<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/ll_acti_scene_1"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_centerHorizontal="true"
        android:background="#ffefefef"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="8.0dip"
        android:paddingTop="8.0dip">

        <com.indris.material.RippleView
            android:id="@id/btn_acti_scene_sys_inside"
            android:layout_width="95.0dip"
            android:layout_height="30.0dip"
            android:background="@mipmap/ic_scene_sys_inside"
            ripple:alphaFactor="0.8"
            ripple:hover="true"
            ripple:rippleColor="#ffffcfa5" />

        <com.indris.material.RippleView
            android:id="@id/btn_acti_scene_custom"
            android:layout_width="95.0dip"
            android:layout_height="30.0dip"
            android:background="@mipmap/ic_scene_sys_custom"
            ripple:alphaFactor="0.8"
            ripple:hover="true"
            ripple:rippleColor="#ffffcfa5" />
    </LinearLayout>

    <Button
        android:id="@id/btn_acti_scene_menu"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@mipmap/menu_ic" />

    <Button
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@mipmap/edit_ic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="15.0dip"
        android:text="asdasdasd"
        android:textColor="#ffff9100"
        android:textSize="18.0sp"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/ll_acti_scene_1">

        <android.support.v4.view.ViewPager
            android:id="@id/pager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </FrameLayout>
</RelativeLayout>