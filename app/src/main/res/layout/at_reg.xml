<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical">

    <include layout="@layout/acti_title_view" />

    <ImageView
        android:id="@+id/iv_step"
        android:layout_width="235.0dip"
        android:layout_height="40.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80.0dip"
        android:background="#ffe9e9e9"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70.0dip">

        <RelativeLayout
            android:id="@+id/rl_verfy"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:visibility="invisible">

            <ImageView
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.0dip"
                android:background="@mipmap/n_login_verfy_code" />

            <ImageView
                android:layout_width="1.0dip"
                android:layout_height="20.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="55.0dip"
                android:background="#ffadadad" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:background="#ffadadad" />

            <EditText
                android:id="@+id/verfy_code"
                android:layout_width="280.0dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="65.0dip"
                android:background="@null"
                android:hint="@string/input_verfy_code"
                android:padding="10.0dip"
                android:singleLine="true"
                android:textSize="14.0dip" />

            <TextView
                android:id="@+id/verify_time"
                android:layout_width="100.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/shap15"
                android:clickable="true"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="13.0dip" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_psd"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_below="@id/rl_verfy"
            android:visibility="invisible">

            <ImageView
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.0dip"
                android:background="@mipmap/n_login__password" />

            <ImageView
                android:layout_width="1.0dip"
                android:layout_height="20.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="55.0dip"
                android:background="#ffadadad" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:background="#ffadadad" />

            <EditText
                android:id="@+id/et_act_log_psd"
                android:layout_width="280.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@null"
                android:hint="@string/input_psd"
                android:padding="10.0dip"
                android:singleLine="true"
                android:textSize="14.0dip" />

            <ImageButton
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="17.0dip"
                android:background="@mipmap/eyes_close"
                android:onClick="eyes" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_area"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip">

            <ImageView
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.0dip"
                android:background="@mipmap/n_login_laction" />

            <ImageView
                android:layout_width="1.0dip"
                android:layout_height="20.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="55.0dip"
                android:background="#ffadadad" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:background="#ffadadad" />

            <EditText
                android:id="@+id/et_area"
                android:layout_width="200.0dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="65.0dip"
                android:background="@null"
                android:cursorVisible="false"
                android:hint="@string/seleted_area"
                android:padding="10.0dip"
                android:singleLine="true"
                android:textSize="14.0dip" />

            <TextView
                android:id="@+id/tv_country_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35.0dip"
                android:textColor="#ff000000" />

            <TextView
                android:layout_width="6.0dip"
                android:layout_height="10.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15.0dip"
                android:background="@mipmap/device_next"
                android:textColor="#ff000000" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="60.0dip"
                android:clickable="true"
                android:onClick="seleteArea" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_phone"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_marginTop="60.0dip">

            <ImageView
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15.0dip"
                android:background="@mipmap/n_login_user" />

            <ImageView
                android:layout_width="1.0dip"
                android:layout_height="20.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="55.0dip"
                android:background="#ffadadad" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:background="#ffadadad" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="280.0dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="65.0dip"
                android:background="@null"
                android:hint="@string/input_phone"
                android:padding="10.0dip"
                android:singleLine="true"
                android:textSize="14.0dip" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_verfy_code_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130.0dip"
            android:text="@string/verfy_code_send"
            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/rl_act_reg_seleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_psd"
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="10.0dip"
            android:visibility="gone">

            <Button
                android:id="@+id/bt_act_reg_seleted"
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:background="@mipmap/time_seleted"
                android:onClick="isProtocol" />

            <TextView
                android:layout_width="157.0dip"
                android:layout_height="20.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="3.0dip"
                android:layout_toRightOf="@id/bt_act_reg_seleted"
                android:background="@mipmap/protocol"
                android:clickable="true"
                android:onClick="goProtocol" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="39.0dip"
            android:layout_below="@id/rl_act_reg_seleted"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="45.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/shap14"
            android:clickable="true"
            android:gravity="center"
            android:onClick="getVerfyCode"
            android:text="@string/next"
            android:textColor="#ffffffff" />
    </RelativeLayout>
</RelativeLayout>