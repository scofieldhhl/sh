<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:melove="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/space"
        android:layout_width="10.0dip"
        android:layout_height="5.0dip"
        android:padding="3.0dip"
        android:textSize="18.0dip"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_online_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/space"
        android:paddingBottom="5.0dip"
        android:paddingLeft="12.0dip"
        android:paddingTop="5.0dip"
        android:textColor="#ffa9a9a9"
        android:textSize="12.0dip"
        android:visibility="gone" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_below="@id/tv_online_status"
        android:background="#6fcecece" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_online_status"
        android:paddingBottom="7.0dip"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingTop="7.0dip">

        <com.ex.ltech.led.my_view.MLImageView
            android:id="@+id/iv_device"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_marginRight="20.0dip"
            android:background="@mipmap/device_light"
            melove:shape_type="round" />

        <com.ex.ltech.led.my_view.ColorSeletedView
            android:id="@+id/iv_mode"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_below="@id/tv_device_name"
            android:layout_marginTop="10.0dip"
            android:layout_toRightOf="@id/iv_device" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_device_name"
            android:layout_marginTop="10.0dip"
            android:layout_toRightOf="@id/iv_mode"
            android:textSize="15.0dip" />

        <ImageView
            android:layout_width="15.0dip"
            android:layout_height="30.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/device_next" />

        <ImageView
            android:id="@+id/off_line_lay"
            android:layout_width="150.0dip"
            android:layout_height="60.0dip"
            android:layout_toRightOf="@id/iv_device"
            android:background="#ffffffff"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_device"
            android:text="asd"
            android:textSize="19.0dip" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_alignParentBottom="true"
        android:background="#6fcecece" />
</RelativeLayout>