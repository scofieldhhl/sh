<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0" />

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.0"
                android:background="@mipmap/mode_bg"
                android:showDividers="none"
                android:weightSum="5.0" />
        </LinearLayout>
    </TabHost>

    <ImageButton
        android:id="@id/iv_act_main_all_on"
        android:layout_width="70.0dip"
        android:layout_height="88.0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/all_off"
        android:onClick="allOff" />

    <RelativeLayout
        android:id="@id/act_gray_layer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50.0dip"
        android:background="#50666666"
        android:clickable="true"
        android:visibility="gone">

        <ImageButton
            android:layout_width="70.0dip"
            android:layout_height="88.0dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/all_on_off"
            android:onClick="allOn" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/rl_failde"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#c0000000"
        android:clickable="true"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="30.0dip"
            android:paddingBottom="5.0dip"
            android:paddingTop="5.0dip">

            <ImageView
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10.0dip"
                android:background="@mipmap/upgrade_failde" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110.0dip"
                android:gravity="center_horizontal"
                android:maxEms="20"
                android:singleLine="false"
                android:text="@string/upgradetips3"
                android:textColor="#ffffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150.0dip"
                android:maxEms="20"
                android:singleLine="false"
                android:text="@string/upgradetips4"
                android:textColor="#ffffffff" />

            <Button
                android:id="@id/finish"
                android:layout_width="240.0dip"
                android:layout_height="35.0dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="270.0dip"
                android:background="@drawable/shap21"
                android:text="@string/upgradetips5"
                android:textColor="#ffffffff" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/rl_load"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#c0000000"
        android:clickable="true"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="30.0dip"
            android:paddingBottom="5.0dip"
            android:paddingTop="5.0dip">

            <ProgressBar
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10.0dip"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@drawable/progressbg"
                android:indeterminateOnly="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110.0dip"
                android:gravity="center_horizontal"
                android:maxEms="20"
                android:singleLine="false"
                android:text="@string/upgradetips"
                android:textColor="#ffffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150.0dip"
                android:maxEms="20"
                android:singleLine="false"
                android:text="@string/upgradetips2"
                android:textColor="#ffffffff" />

            <TextView
                android:id="@id/tv_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38.0dip"
                android:gravity="center_horizontal"
                android:maxEms="20"
                android:singleLine="false"
                android:text="0%"
                android:textColor="#ffffffff"
                android:textSize="20.0dip" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/rl_ok"
        android:layout_width="310.0dip"
        android:layout_height="150.0dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shap20"
        android:clickable="true"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="30.0dip"
            android:paddingBottom="5.0dip"
            android:paddingTop="5.0dip">

            <ImageView
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/n_rc_seleted_lib" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="68.0dip"
                android:gravity="center_horizontal"
                android:maxEms="20"
                android:singleLine="false"
                android:text="@string/updata_ok"
                android:textColor="#ffffffff"
                android:textSize="20.0dip" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>