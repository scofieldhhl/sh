<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@color/c7" />

    <Button
        android:layout_width="23.0dip"
        android:layout_height="23.0dip"
        android:layout_margin="12.0dip"
        android:background="@mipmap/device_ic"
        android:onClick="back" />

    <TextView
        android:id="@id/tv_ct_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50.0dip"
        android:layout_marginTop="15.0dip"
        android:text="@string/yaokong"
        android:textColor="#ff434343"
        android:textSize="15.0dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13.0dip"
        android:text="@string/color"
        android:textColor="#ff000000"
        android:textSize="18.0dip" />

    <Button
        android:layout_width="22.0dip"
        android:layout_height="22.0dip"
        android:layout_alignParentRight="true"
        android:layout_margin="12.0dip"
        android:background="@mipmap/ct_more"
        android:onClick="add" />

    <Button
        android:layout_width="25.0dip"
        android:layout_height="25.0dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@mipmap/plug_edit"
        android:onClick="edit"
        android:visibility="gone" />

    <com.ex.ltech.led.my_view.SimpleColorPickerView
        android:id="@id/color"
        android:layout_width="fill_parent"
        android:layout_height="250.0dip"
        android:layout_marginTop="50.0dip" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="300.0dip"
        android:layout_marginTop="300.0dip"
        android:background="#ffffffff">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="#ffdedede" />

        <ImageView
            android:id="@id/sub"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@mipmap/kt_stub"
            android:clickable="true" />

        <SeekBar
            android:id="@id/sb"
            android:layout_width="260.0dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20.0dip"
            android:maxHeight="3.0dip"
            android:minHeight="3.0dip"
            android:progress="100"
            android:progressDrawable="@drawable/seekbar_define_style_5"
            android:thumb="@mipmap/thumb_2" />

        <ImageView
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@mipmap/kt_add"
            android:clickable="true" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginTop="60.0dip"
            android:background="#ffdedede" />

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55.0dip"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="10.0dip">

                <GridView
                    android:id="@id/grid"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:numColumns="auto_fit"
                    android:stretchMode="spacingWidthUniform" />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="68.0dip"
        android:layout_alignParentBottom="true"
        android:background="@color/c7" />

    <ImageView
        android:id="@id/off"
        android:layout_width="70.0dip"
        android:layout_height="88.0dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/all_off"
        android:onClick="off" />

    <RelativeLayout
        android:id="@id/rl_pop"
        android:layout_width="130.0dip"
        android:layout_height="80.0dip"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50.0dip"
        android:background="#ffffffff"
        android:visibility="gone">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_centerVertical="true"
            android:background="#ffdbdbdb" />

        <ImageView
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_margin="10.0dip"
            android:background="@mipmap/ct_timing" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:onClick="goTime"
            android:padding="10.0dip"
            android:text="@string/timing"
            android:textColor="#ff000000" />

        <ImageView
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="50.0dip"
            android:background="@mipmap/ct_timing" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40.0dip"
            android:clickable="true"
            android:onClick="changeCol"
            android:padding="10.0dip"
            android:text="@string/chan_col"
            android:textColor="#ff000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/act_gray_layer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50.0dip"
        android:background="#50666666"
        android:clickable="true"
        android:visibility="gone">

        <ImageButton
            android:id="@id/on"
            android:layout_width="70.0dip"
            android:layout_height="88.0dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/all_on_off"
            android:onClick="on" />
    </RelativeLayout>
</RelativeLayout>