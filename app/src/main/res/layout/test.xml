<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/layout" android:fitsSystemWindows="true" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <Button android:id="@id/login" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="登陆" android:onClick="onclick" />
            <TextView android:id="@id/tv_login_info" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <Button android:id="@id/share" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="分享设备" android:onClick="onclick" />
            <TextView android:id="@id/tv_share_info" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <Button android:id="@id/cancel_share_device" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="关闭分享设备请求" android:onClick="onclick" />
            <TextView android:id="@id/tv_cancel_share_device" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <Button android:id="@id/bt_query_share_device" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="获取分享设备列表" android:onClick="onclick" />
            <Button android:id="@id/bt_query_subscribe_device" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="获取订阅设备列表" android:onClick="onclick" />
            <TextView android:id="@id/tv_share_device_info" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <Button android:id="@id/bt_delete_all_share_msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="删除所有分享记录" android:onClick="onclick" />
            <TextView android:id="@id/tv_delete_share_info" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <TextView android:id="@id/tv_accept_share" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <TextView android:id="@id/tv_deny_share" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <TextView android:id="@id/tv_error_msg" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>