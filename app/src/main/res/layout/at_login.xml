<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical">

    <include layout="@layout/acti_title_view" />

    <ImageView
        android:layout_width="90.0dip"
        android:layout_height="90.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="40.0dip"
        android:background="@mipmap/log_head_5"
        android:onClick="changeHead"
        android:visibility="gone" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="15.0dip"
        android:layout_marginTop="50.0dip"
        android:background="#ffe9e9e9" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_marginTop="60.0dip"
        android:visibility="gone">

        <ImageView
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15.0dip"
            android:background="@mipmap/n_login_laction" />

        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55.0dip"
            android:background="#ffadadad" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:background="#ffadadad" />

        <EditText
            android:id="@id/et_area"
            android:layout_width="200.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="65.0dip"
            android:background="@null"
            android:cursorVisible="false"
            android:hint="@string/seleted_area"
            android:padding="10.0dip"
            android:singleLine="true"
            android:textSize="14.0dip" />

        <TextView
            android:id="@id/tv_country_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35.0dip"
            android:textColor="#ff000000" />

        <TextView
            android:layout_width="6.0dip"
            android:layout_height="10.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15.0dip"
            android:background="@mipmap/device_next"
            android:textColor="#ff000000" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:clickable="true"
            android:onClick="seleteArea" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_marginTop="100.0dip">

        <ImageView
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15.0dip"
            android:background="@mipmap/n_login_user" />

        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55.0dip"
            android:background="#ffadadad" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:background="#ffadadad" />

        <EditText
            android:id="@id/et_act_log_phone"
            android:layout_width="280.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="65.0dip"
            android:background="@null"
            android:hint="@string/input_phone"
            android:padding="10.0dip"
            android:singleLine="true"
            android:textSize="14.0dip" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_marginTop="170.0dip">

        <ImageView
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15.0dip"
            android:background="@mipmap/n_login__password" />

        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55.0dip"
            android:background="#ffadadad" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="15.0dip"
            android:background="#ffadadad" />

        <EditText
            android:id="@id/et_act_log_psd"
            android:layout_width="280.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@null"
            android:hint="@string/input_psd"
            android:padding="10.0dip"
            android:singleLine="true"
            android:textSize="14.0dip" />

        <ImageButton
            android:id="@id/eyes"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="17.0dip"
            android:background="@mipmap/eyes_close"
            android:onClick="eyes" />
    </RelativeLayout>

    <TextView
        android:id="@id/tv_act_log_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="3.0dip"
        android:layout_marginTop="310.0dip"
        android:clickable="true"
        android:onClick="forgetPsw"
        android:text="@string/forget_psd"
        android:textColor="#ff000000" />

    <com.indris.material.RippleView
        android:layout_width="fill_parent"
        android:layout_height="39.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="45.0dip"
        android:layout_marginTop="250.0dip"
        android:background="@drawable/shap14"
        android:clickable="true"
        android:gravity="center"
        android:onClick="log"
        android:text="@string/login"
        android:textColor="#ffffffff" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="150.0dip"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="60.0dip"
            android:layout_height="1.0dip"
            android:layout_marginLeft="30.0dip"
            android:layout_marginTop="30.0dip"
            android:background="#ffc3c3c3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23.0dip"
            android:text="@string/fast_log" />

        <TextView
            android:layout_width="60.0dip"
            android:layout_height="1.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30.0dip"
            android:layout_marginTop="30.0dip"
            android:background="#ffc3c3c3" />

        <Button
            android:id="@id/nullbtn"
            android:layout_width="80.0dip"
            android:layout_height="50.0dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60.0dip"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60.0dip"
            android:layout_toLeftOf="@id/nullbtn"
            android:clickable="true"
            android:onClick="fastLog1">

            <ImageView
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/ic_fast_log1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="65.0dip"
                android:text="@string/tv_fast_log1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60.0dip"
            android:layout_toRightOf="@id/nullbtn"
            android:clickable="true"
            android:onClick="fastLog2">

            <ImageView
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/ic_fast_log2"
                android:onClick="fastLog2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20.0dip"
                android:layout_marginTop="65.0dip"
                android:text="@string/tv_fast_log2" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>