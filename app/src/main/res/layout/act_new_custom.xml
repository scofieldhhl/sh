<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:id="@id/rl_act_new_mode"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:paddingBottom="10.0dip">

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@id/rl_parent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.ex.ltech.led.my_view.SceneColorPickerView
            android:id="@id/scpv_acti_new_mode"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_marginTop="50.0dip"
            app:layout_heightPercent="55%"
            app:layout_widthPercent="100%" />

        <TextView
            android:id="@id/tv_acti_new_mode_circle_color_posi"
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200.0dip"
            android:background="@mipmap/ic_color_circle_bg"
            android:gravity="center"
            android:text="3"
            android:textColor="#ff000000"
            android:textSize="30.0sp"
            android:visibility="gone" />

        <com.ex.ltech.led.my_view.CircleColorView
            android:id="@id/ccv_acti_new_mode"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_below="@id/scpv_acti_new_mode" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ccv_acti_new_mode">

            <TextView
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:textColor="#ff000000" />

            <TextView
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:textColor="#ff000000" />

            <TextView
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:textColor="#ff000000" />

            <TextView
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:textColor="#ff000000" />

            <TextView
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:textColor="#ff000000" />

            <TextView
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:textColor="#ff000000" />

            <TextView
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:textColor="#ff000000" />

            <TextView
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:textColor="#ff000000" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_below="@id/ccv_acti_new_mode"
            android:background="@color/gray" />

        <Button
            android:id="@id/bt_acti_new_mode_tiao"
            android:layout_width="100.0dip"
            android:layout_height="31.0dip"
            android:layout_below="@id/bt_acti_new_mode_play"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20.0dip"
            android:background="@mipmap/ic_new_custom_tiao" />

        <Button
            android:id="@id/bt_acti_new_mode_zan"
            android:layout_width="100.0dip"
            android:layout_height="31.0dip"
            android:layout_below="@id/bt_acti_new_mode_play"
            android:layout_marginTop="20.0dip"
            android:layout_toLeftOf="@id/bt_acti_new_mode_tiao"
            android:background="@mipmap/ic_new_custom_zan" />

        <Button
            android:id="@id/bt_acti_new_mode_ping"
            android:layout_width="100.0dip"
            android:layout_height="31.0dip"
            android:layout_below="@id/bt_acti_new_mode_play"
            android:layout_marginTop="20.0dip"
            android:layout_toRightOf="@id/bt_acti_new_mode_tiao"
            android:background="@mipmap/ic_new_custom_ping" />

        <com.indris.material.RippleView
            android:id="@id/bt_acti_new_mode_play"
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ccv_acti_new_mode"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@mipmap/music_paly"
            android:clickable="true"
            android:onClick="play"
            app:alphaFactor="0.8"
            app:hover="true"
            app:rippleColor="#ffffffff" />

        <Button
            android:id="@id/bt_acti_new_mode_bringness"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/sb_acti_new_mode1"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="25.0dip"
            android:background="@mipmap/brightness" />

        <SeekBar
            android:id="@id/sb_acti_new_mode1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ccv_acti_new_mode"
            android:layout_marginLeft="50.0dip"
            android:layout_marginRight="110.0dip"
            android:layout_marginTop="30.0dip"
            android:indeterminate="false"
            android:maxHeight="5.0dip"
            android:minHeight="5.0dip"
            android:progress="50"
            android:progressDrawable="@drawable/seekbar_style2"
            android:thumb="@mipmap/thumb_2" />

        <SeekBar
            android:id="@id/sb_acti_new_mode2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sb_acti_new_mode1"
            android:layout_marginLeft="50.0dip"
            android:layout_marginRight="110.0dip"
            android:layout_marginTop="20.0dip"
            android:maxHeight="5.0dip"
            android:minHeight="5.0dip"
            android:progress="100"
            android:progressDrawable="@drawable/seekbar_style2"
            android:thumb="@mipmap/thumb_2" />

        <Button
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/ccv_acti_new_mode"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="35.0dip"
            android:background="@mipmap/ic_progress_height" />

        <RelativeLayout
            android:id="@id/rl_new_custom_color_bar"
            android:layout_width="fill_parent"
            android:layout_height="30.0dip"
            android:layout_marginTop="50.0dip"
            android:background="#ffff7f61">

            <EditText
                android:id="@id/et_act_new_custom_g"
                android:layout_width="50.0dip"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shap1"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:maxLength="3"
                android:padding="2.0dip"
                android:text="12312"
                android:textColor="@color/black"
                android:textSize="15.0dip" />

            <EditText
                android:id="@id/et_act_new_custom_r"
                android:layout_width="50.0dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="70.0dip"
                android:layout_toLeftOf="@id/et_act_new_custom_g"
                android:background="@drawable/shap1"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:maxLength="3"
                android:padding="2.0dip"
                android:text="12312"
                android:textColor="@color/black"
                android:textSize="15.0dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:layout_toLeftOf="@id/et_act_new_custom_r"
                android:text="R"
                android:textColor="#ffffffff"
                android:textSize="17.0dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.0dip"
                android:layout_toLeftOf="@id/et_act_new_custom_g"
                android:text="G"
                android:textColor="#ffffffff"
                android:textSize="17.0dip" />

            <TextView
                android:id="@id/tv_new_custom_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_toRightOf="@id/et_act_new_custom_g"
                android:text="B"
                android:textColor="#ffffffff"
                android:textSize="17.0dip" />

            <EditText
                android:id="@id/et_act_new_custom_b"
                android:layout_width="50.0dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_new_custom_b"
                android:background="@drawable/shap1"
                android:gravity="center_horizontal"
                android:inputType="number"
                android:maxLength="3"
                android:padding="2.0dip"
                android:text="12312"
                android:textColor="@color/black"
                android:textSize="15.0dip" />
        </RelativeLayout>
    </android.support.percent.PercentRelativeLayout>

    <include layout="@layout/acti_title_view" />
</RelativeLayout>