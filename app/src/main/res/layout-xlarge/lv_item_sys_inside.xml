<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:melove="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_acti_scene_list_item_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:focusableInTouchMode="false" />

    <TextView
        android:id="@+id/tv_acti_scene_list_item_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_acti_scene_list_item_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:maxEms="5"
        android:singleLine="true"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/iv_acti_scene_list_item_4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <com.ex.ltech.led.my_view.MLImageView
        android:id="@+id/iv_acti_scene_list_item_5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:clickable="false"
        melove:shape_type="round" />
</RelativeLayout>