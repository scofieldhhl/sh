<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:layout_weight="10"
        android:background="#f1f1f1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_device_password_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="请输入初始化密码"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_device_password_content"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:lines="2"
                android:text="为设备创建访问密码，密码小于900000000，请牢记您的密码。"
                android:textColor="#000000"
                android:textSize="16sp" />

            <io.xlink.wifi.pipe.view.ClearableEditText
                android:id="@+id/et_device_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:ems="10"
                android:hint="请输入认证码"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:singleLine="true" />

            <Button
                android:id="@+id/b_device_password_next"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_gcircular_corner"
                android:text="下一步"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>