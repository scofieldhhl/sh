<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <TextView
        android:id="@+id/demotitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="35dp"
        android:text="demo"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/nightgrid_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/demotitle"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/keybtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nightgrid_key"
                android:src="@drawable/btn_1" />

            <ImageView
                android:id="@+id/keybtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nightgrid_key"
                android:src="@drawable/btn_2" />

            <ImageView
                android:id="@+id/keybtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nightgrid_key"
                android:src="@drawable/btn_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/keybtn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nightgrid_key"
                android:src="@drawable/btn_4" />

            <ImageView
                android:id="@+id/keybtn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nightgrid_key"
                android:src="@drawable/btn_5" />

            <ImageView
                android:id="@+id/keybtn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nightgrid_key"
                android:src="@drawable/btn_6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/keybtn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nightgrid_key"
                android:src="@drawable/btn_7" />

            <ImageView
                android:id="@+id/keybtn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nightgrid_key"
                android:src="@drawable/btn_8" />

            <ImageView
                android:id="@+id/keybtn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nightgrid_key"
                android:src="@drawable/btn_9" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:text="设备调试"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:visibility="gone" />

</RelativeLayout>